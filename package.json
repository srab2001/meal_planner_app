{
  "name": "meal-planner-backend",
  "version": "1.0.0",
  "description": "Backend for AI-powered meal planning application",
  "main": "server.js",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "prestart": "node scripts/run-migrations.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "postinstall": "npx prisma generate --schema prisma/schema.prisma",
    "test": "echo 'Running tests...' && node --test || echo 'No tests defined yet'",
    "test:watch": "nodemon --exec npm test",
    "update-key": "node update-openai-key.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "db:migrate": "node-pg-migrate up",
    "db:reset": "docker-compose down postgres && docker-compose up -d postgres",
    "lint": "echo 'Linting...' || true",
    "setup:test": "docker-compose up -d postgres-test && sleep 5 && npm run db:migrate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "openai": "^4.104.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "stripe": "^17.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "5.22.0"
  }
}
