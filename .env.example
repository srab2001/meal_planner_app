# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend-url.com/auth/google/callback
FRONTEND_BASE=https://your-vercel-app.vercel.app

# IMPORTANT: Update these URLs for Render deployment
# GOOGLE_CALLBACK_URL should be: https://your-render-service-name.onrender.com/auth/google/callback
# Example: https://meal-planner-api.onrender.com/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# FRONTEND_BASE should be your frontend URL (if separate) or leave empty for same domain
# Example: https://your-frontend-app.vercel.app
# For local dev: http://localhost:3000
# SECURITY: This URL is whitelisted for CORS. Only requests from this origin will be accepted.
FRONTEND_BASE=http://localhost:3000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Stripe Configuration (for payment processing)
# Get your keys from: https://dashboard.stripe.com/apikeys
# Test keys start with sk_test_ and pk_test_
# Live keys start with sk_live_ and pk_live_
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# PostgreSQL Database Configuration (Required for Phase 1)
# Get this from your Render PostgreSQL database page
# Internal URL (use in production): postgresql://user:password@dpg-xxxxx-a/dbname
# External URL (use for local dev): postgresql://user:password@dpg-xxxxx-a.oregon-postgres.render.com/dbname

# Production Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/meal_planner_production

# Test Database (separate database for testing - prevents test data from polluting production)
# Create a separate database instance for testing: meal_planner_test
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/meal_planner_test

# JWT Secret (for token authentication)
JWT_SECRET=your-random-jwt-secret-here

# Session Configuration
# For production, use a strong random string (Render can auto-generate this)
SESSION_SECRET=your-random-secret-key-here

# Server Configuration
PORT=5000

# Environment (development, test, production)
# This determines which database and configuration to use
NODE_ENV=production
