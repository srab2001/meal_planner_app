# Fitness Backend - Environment Variables
# Copy to .env and update values

# Database (Render PostgreSQL) - All Tables
# All fitness tables and admin tables are in the main Render database
DATABASE_URL=postgresql://user:password@dpg-xxx.postgres.render.com:5432/meal_planner?sslmode=require

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# Server Configuration
PORT=5000
NODE_ENV=development
LOG_LEVEL=debug

# API
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email (future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
